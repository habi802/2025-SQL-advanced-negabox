<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "kr.co.negaboxdummy.movie.TheaterMovieMapper">
    <select id="findTheaterIdAndRegion">
        SELECT theater_id, region
        FROM theater
    </select>

    <select id="findMovieIdAndReleaseDate">
        SELECT movie_id, release_date
        FROM movie
    </select>

    <insert id="save">
        INSERT INTO theater_movie
        SET theater_id = #{theaterId},
            movie_id = #{movieId},
            admin_id = #{adminId},
            start_date = #{startDate},
            end_date = #{endDate}
    </insert>
</mapper>